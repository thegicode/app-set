{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "lib": ["ES6", "ESNext", "DOM"],
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest"],
        "sourceMap": true,
        "outDir": "./dev/js/"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/__tests__"]
}
